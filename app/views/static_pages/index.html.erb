<% unless current_user %>
  <%= link_to "Log In", new_session_url %>
<% else %>
  Hi, <%= current_user.email %>.
  <br>
  <%= link_to "Log Out", session_url, :method => :delete %>
  <p></p>
<% end %>

<h1>Memochi</h1>

<div class="row">
  <div class="small-4 small-centered columns">
    <form action="<%= users_url %>" method="POST" accept-charset="utf-8">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="email" name="user[email]" id="email" placeholder="Email" autocomplete="off" autofocus>

      <input type="password" name="user[password]" id="password" placeholder="Password" autocomplete="off">
      
      <p><input type="submit" value="Sign Up" class="button tiny expand"></p>
    </form>
  </div>


</div>


