<style>
body {
  background-image: -webkit-gradient(
  	linear,
  	left top,
  	right bottom,
  	color-stop(0.5, #F7F7F7),
  	color-stop(0.5, #FFFFFF)
  );
  background-image: -o-linear-gradient(right bottom, #F7F7F7 50%, #FFFFFF 50%);
  background-image: -moz-linear-gradient(right bottom, #F7F7F7 50%, #FFFFFF 50%);
  background-image: -webkit-linear-gradient(right bottom, #F7F7F7 50%, #FFFFFF 50%);
  background-image: -ms-linear-gradient(right bottom, #F7F7F7 50%, #FFFFFF 50%);
  background-image: linear-gradient(to right bottom, #F7F7F7 50%, #FFFFFF 50%);
}

.hidden-prompt {
  visibility: hidden;
}

input[type="text"] {
  border: none;
}

a.button {
  opacity: .8;
}

h1 {
  letter-spacing: 3px;
}

</style>

<h1>Recently Created Memos</h1>
  <div class="row">
    <div class="small-6 large-centered columns">
        <div class="row collapse">
      <div class="small-9 columns">
        <input type="text" placeholder="Search by tag..." style="border-top-right-radius: 0 !important; border-bottom-right-radius: 0 !important">
      </div>
      <div class="small-3 columns">
        <a href="#" class="button expand tiny" style="border-top-left-radius: 0 !important; border-bottom-left-radius: 0 !important"><i class="fa fa-search"></i></a>
      </div>
      </div>
    </div>
    <span class="hidden-prompt">
        Search by tag feature coming soon...
        <p></p>
    </span>
  </div>
  
  
<div class="row">
  <div class="small-12 columns">
    <% @memos.each do |memo| %>
      <% style_bg = memo.bg.nil? ? "" : "background-image: url("+memo.bg+")" %>
      <a href="<%=memo_url(memo.id) %>">
      <div class="memo-content index" style="<%= style_bg %>">
        <% safe_tags = ['b', 'strong', 'i', 'em', 'u', 'strike', 
                        'div', 'blockquote', 'br', 'img', 'font'] %>
        <%= sanitize memo.body, tags: safe_tags, attributes: %w(style face size color src) %>
        
      </div></a>
    <% end %> 
  </div> 
</div>

<script>
  $(document).ready(function() {
    $('a.button').on('click', function() {
       $('.hidden-prompt').css('visibility','visible').hide().fadeIn('slow');
    });
  });
</script>
